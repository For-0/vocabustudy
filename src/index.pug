extends includes/layout.pug
block variables
    - var title = "Home";
block main-stylesheet
    link(rel="stylesheet" href="css/home.scss")
    link(rel="stylesheet" href="npm:firebaseui/dist/firebaseui.css" disabled id="firebaseui-css")
block extrahead
    link(rel="preload" href="./hero-background.svg" as="image")
prepend navbar
    .change-hue-container
        button.mdc-icon-button.btn-change-hue
            .mdc-icon-button__ripple
            span.mdc-icon-button__focus-ring
            i.material-symbols-rounded palette
block content
    .page#login(data-nosnippet)
        h1 Log In  
        div
            div
                p.title.is-size-3.has-text-white Log In / Sign Up:
                p.m-0 You must be at least 13 years old to sign up, or have permission from a parent/guardian.
                #firebaseui-auth-container
        div
            p.title.is-size-5 Create sets and study together with a 
                strong(style="display: block;") free account.
                img(src="pencil.png" alt="image of pencil.")
    .page#account(data-nosnippet)
        h1 My Account
        p Only your display name is public.
        .card 
            .card-content
                .content
                    .title.is-size-5.fw-bold.field-name(style="word-break:break-word;")
                    .supporting-text
                        span.field-email
                        span.field-email-not-verified.fw-bold.nohuechange.tag.ml-1.is-danger(hidden) Email Not Verified
                        span.field-email-verified.fw-bold.nohuechange.tag.ml-1.is-success(hidden) Email Verified
                    .supporting-text 
                        strong Account Created: 
                        span.field-created
            footer.card-footer
                p.card-footer-item(hidden)
                    button.button.is-ghost.has-text-primary.btn-verify-email Verify Email
                p.card-footer-item
                    button.button.is-ghost.has-text-primary.btn-change-name Change Display Name
                p.card-footer-item
                    button.button.is-ghost.has-text-primary.btn-change-password Change Password
                p.card-footer-item
                    button.button.is-ghost.btn-delete-account.has-text-danger.nohuechange Delete Account
    .page#mysets(data-nosnippet)
        h1 My Sets:
            .dropdown.is-pulled-right
                .dropdown-trigger
                    button.button.btn-create.has-text-white.is-ghost(aria-haspopup="true" aria-controls="dropdown-menu")
                        span.icon
                            i.material-symbols-rounded(aria-hidden="true") add_circle_outline
                        span Create
                        span.icon.is-small
                            i.material-symbols-rounded(aria-hidden="true") arrow_drop_down
                .dropdown-menu.menu-create(role="menu")
                    .dropdown-content
                        a.dropdown-item(href="/set/new/edit/")
                            i.material-symbols-rounded(aria-hidden="true") add_circle_outline
                            span Set
                        a.dropdown-item(href="/set/new-timeline/edit/")
                            i.material-symbols-rounded(aria-hidden="true") add_circle_outline
                            span Timeline
                        a.dropdown-item(href="/set/new-guide/edit/")
                            i.material-symbols-rounded(aria-hidden="true") add_circle_outline
                            span Guide
        .set-container(data-empty="You don't have any sets. Create one!")
        button.button.is-primary.is-outlined.mt-2(style="display: block;" hidden) Load More
        h2.title.is-size-5.my-3 My Custom Collections:
            button.button.is-primary.is-outlined.is-pulled-right.btn-create-collection
                span.icon
                    i.material-symbols-rounded(aria-hidden="true") add_circle_outline
                span Create Custom Collection
        .collection-container.set-container(data-empty="You don't have any custom collections. Create one!")
    .page#admin(data-nosnippet)
        h1 Admin Portal
        button.button.is-warning.mb-4.btn-get-all.is-block Load All Sets
        .set-container(data-empty="No Sets")
        button.button.is-primary.is-outlined.mt-2(style="display: block;" hidden) Load More
    .page#saved-sets(data-nosnippet)
        h1 Saved Sets
        h2 Liked Sets:
        .liked-container.set-container(data-empty="No Sets")
        button.button.is-primary.is-outlined.mt-2(style="display: block;" hidden) Load More
    .page#search(data-nosnippet)
        h1 Browse Sets:
        details.box.block.mt-5
            summary
                h2.title.is-size-4(style="display: inline;") Featured Sets
            .set-container.mt-4(style="cursor: auto;" data-empty="No featured sets") Loading featured sets...
        h2.title.is-size-4.mb-0 Search:
        p.block Most sets are created by CVMS students for CVMS students
        div.field-search-container.box
            .level.mb-1
                .column.is-four-fifths-fullhd.is-three-quarters-widescreen.is-two-thirds-desktop.is-half-tablet
                    input.input.field-search(placeholder="Search" type="text" autocomplete="off")
                .column.field.has-addons
                    .control
                        button.button.is-outlined.is-info.btn-collections-menu(type="button")
                            span.icon
                                i.material-symbols-rounded(aria-hidden="true") filter_list
                            span Collections
                    .control
                        button.button.is-outlined.is-danger.btn-clear-filters(type="button")
                            span.icon
                                i.material-symbols-rounded(aria-hidden="true") filter_list_off
                            span Clear
                    .control
                        button.button.is-primary.btn-search-go(type="button")
                            span.icon
                                i.material-symbols-rounded(aria-hidden="true") search
                            span Search
            p Maximum 10 Words/Collections:
                span.field-search-collections-list
        .set-container.mt-4(data-empty="No Sets Matched Your Search. Did you spell each word correctly?") Try searching for something like '50 States' or try a featured set above.
        button.button.is-primary.is-outlined.mt-2(style="display: block;" hidden) Load More
