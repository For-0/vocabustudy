                        .tile.is-child
                            img.my-auto.has-background-white.ignore-user-hue(src="images/made-with-bulma.png?as=webp&height=100" style="border-radius: 6px; height: 100px;")
                    .tile.is-parent
                        .tile.is-child
                            img.ignore-user-hue(src="images/built-with-firebase.svg" style="height: 220px")
