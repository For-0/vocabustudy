- var styleFile = "home.scss";
doctype html
html(lang="en" style="overflow-x: hidden;")
    include includes/head
    body.mdc-typography
        include includes/navbar
        .change-hue-container
            button.mdc-icon-button.btn-change-hue
                .mdc-icon-button__ripple
                span.mdc-icon-button__focus-ring
                i.material-icons-round palette
        main.mdc-top-app-bar--fixed-adjust
            .page#login
                h1  
                div
                    div
                        p.mdc-typography--headline4 Log In / Sign Up:
                        p(style="margin: 0;") You must be at least 13 years of age to sign up.
                        #firebaseui-auth-container
                div
                    p.mdc-typography--headline5 Create sets and make assignments with a 
                        strong(style="display: block;") free account
                        img(src="pencil.png" alt="")
            .page#account
                h1 My Account:
                p Only your display name is public
                .mdc-card 
                    .mdc-card-wrapper__text-section
                        .mdc-typography--headline5.fw-bold.field-name
                        .supporting-text
                            span.field-email
                            span.field-email-verified.fw-bold(style="color: #b30000; opacity: 1;" hidden)  (Not Verified)
                    .mdc-card-wrapper__text-section
                        .supporting-text 
                            strong Account Created: 
                            span.field-created
                    .mdc-card__actions
                        button.mdc-button.mdc-card__action.mdc-card__action--button.btn-verify-email(hidden)
                            .mdc-button__ripple
                            span.mdc-button__label Verify Email
                        button.mdc-button.mdc-card__action.mdc-card__action--button.btn-change-name
                            .mdc-button__ripple
                            span.mdc-button__label Change Display Name
                        button.mdc-button.mdc-card__action.mdc-card__action--button.btn-change-password
                            .mdc-button__ripple
                            span.mdc-button__label Change Password
                        button.mdc-button.mdc-card__action.mdc-card__action--button.btn-delete-account(style="color: #b30000;")
                            .mdc-button__ripple
                            span.mdc-button__label Delete Account
            .page#mysets
                h1 My Sets:
                    div(style="position: absolute;right: 0;top: 0;")
                        a.mdc-button.mdc-button--leading.btn-create-set(href="/set/new/edit/" style="color: white;")
                            span.mdc-button__ripple
                            i.material-icons-round.mdc-button__icon(aria-hidden="true") add_circle_outline
                            span.mdc-button__label Set
                        a.mdc-button.mdc-button--leading.btn-create-set(href="/set/new-timeline/edit/" style="color: white;")
                            span.mdc-button__ripple
                            i.material-icons-round.mdc-button__icon(aria-hidden="true") add_circle_outline
                            span.mdc-button__label Timeline
                        a.mdc-button.mdc-button--leading.btn-create-set(href="/set/new-guide/edit/" style="color: white;")
                            span.mdc-button__ripple
                            i.material-icons-round.mdc-button__icon(aria-hidden="true") add_circle_outline
                            span.mdc-button__label Guide
                .set-container(data-empty="You don't have any sets. Create one!")
                button.mdc-button.mdc-button--outlined(style="display: block; margin-top: 0.5rem;" hidden)
                    span.mdc-button__ripple
                    span.mdc-button__label Load More
                h2.mdc-typography--headline5 My Custom Collections:
                    button.mdc-button.mdc-button--leading.btn-create-collection(style="float: right")
                        span.mdc-button__ripple
                        i.material-icons-round.mdc-button__icon(aria-hidden="true") add_circle_outline
                        span.mdc-button__label Create Custom Collection
                .collection-container.set-container(data-empty="You don't have any custom collections. Create one!")
            .page#admin
                h1 Admin Portal
                button.mdc-button.mdc-button--raised.btn-get-all(style="display: block; margin-bottom: 1rem;")
                    span.mdc-button__ripple
                    span.mdc-button__label Load All Sets
                .set-container(data-empty="No Sets")
                button.mdc-button.mdc-button--outlined(style="display: block; margin-top: 0.5rem;" hidden)
                    span.mdc-button__ripple
                    span.mdc-button__label Load More
            .page#saved-sets
                h1 Saved Sets
                h2 Liked Sets:
                .liked-container.set-container(data-empty="No Sets")
                button.mdc-button.mdc-button--outlined(style="display: block; margin-top: 0.5rem;" hidden)
                    span.mdc-button__ripple
                    span.mdc-button__label Load More
            .page#search
                h1 Browse Sets:
                details
                    summary
                        h2.mdc-typography--headline5(style="display: inline;") Featured Sets
                    .set-container(style="margin-top: 1rem; cursor: auto;" data-empty="No featured sets") Loading featured sets...
                h2.mdc-typography--headline5 Search:
                p Most sets are created by CVMS students for CVMS students
                div.field-search-container(style="width: 50%; display: inline-grid;")
                    label.mdc-text-field.mdc-text-field--outlined.field-search
                        span.mdc-notched-outline
                            span.mdc-notched-outline__leading
                            span.mdc-notched-outline__notch
                                span.mdc-floating-label Search
                            span.mdc-notched-outline__trailing
                        input.mdc-text-field__input(aria-label="Search" type="text" aria-controls="field-search-helper" aria-describedby="field-search-helper")
                    .mdc-text-field-helper-line
                        .mdc-text-field-helper-text.mdc-text-field-helper-text--persistent#field-search-helper Maximum 10 Words - Collections: 
                            span.list-collections
                button.mdc-button.mdc-button--outlined.mdc-button--leading.btn-collections-menu(type="button" style="margin-left: 1rem;")
                    span.mdc-button__ripple
                    i.material-icons-round.mdc-button__icon(aria-hidden="true") filter_list
                    span.mdc-button__label Filter by Collection
                button.mdc-button.mdc-button--outlined.mdc-button--leading.btn-clear-filters(type="button" style="margin-left: 1rem;")
                    span.mdc-button__ripple
                    i.material-icons-round.mdc-button__icon(aria-hidden="true") filter_list_off 
                    span.mdc-button__label Clear Filters
                button.mdc-button.mdc-button--raised.mdc-button--leading.btn-search-go(type="button" style="margin-left: 1rem;")
                    span.mdc-button__ripple
                    i.material-icons-round.mdc-button__icon(aria-hidden="true") search
                    span.mdc-button__label Go
                .set-container(style="margin-top: 1rem;" data-empty="No Sets Matched Your Search. Did you spell each word correctly?") Try searching for something like '50 States' or try a featured set above.
                button.mdc-button.mdc-button--outlined(style="display: block; margin-top: 0.5rem;" hidden)
                    span.mdc-button__ripple
                    span.mdc-button__label Load More
            .page#credits
                h1 Credits - Vocabustudy
                p.mdc-typography--headline5 Vocabustudy is part of a group of applications called the For Zero Applications. For Zero is a project to create helpful, student-conscious applications that are completely free and transform student life. Thank you for being on our journey!
                p.mdc-typography--headline5 For Zero Applications is headed by #[strong Siddhant Kameswar]. The amount of work and contribution given by Siddhant outstrips all other contributors.
                h3 The following people have also contributed to the project:
                ul
                    li #[strong Omkar Patil] has been with Siddhant since the beginning. Throughout the development of Vocabustudy, he has #[strong helped with testing and minor bug fixes] and has #[strong requested features] to make Vocabustudy better. Above all, he and Nikhil have #[strong shared Vocabustudy with the world], and has helped grow it along the way.
                    li #[strong Nikhil Gupta] (not Ruhan's brother) has also been with Siddhant since the beginning. Throughout the development of Vocabustudy, he has #[strong requested features] to make Vocabustudy better. He and Omkar have #[strong shared Vocabustudy with the world], which has helped grow it along the way.
                    li #[strong Ruhan Gupta] (not Nikhil's brother) helped #[strong co-found] For Zero and has contributed to the #[strong design] of the applications, like Vocabustudy. He has #[strong helped with testing and minor bug fixes], created the #[strong For Zero logo], and helped design the #[strong Vocabustudy Discord Server]. He also helped set up the #[strong GitHub Page] for For Zero.
                    li #[strong Michael Zhao], once told about Vocabustudy, started stress testing it. The amount of bugs he found and helped fix cannot be counted*
                h3 Honorable Mentions:
                ul(style="margin-bottom: 2rem;")
                    li Thank you to everybody who reports bugs. Your reports help us make Vocabustudy better.
                    li Thank you to all moderators and helpers on the Vocabustudy Discord Server. You help make the server a better place.
                    //li Thank you to the rest of the Developer team. Without you, Vocabustudy wouldn't be what it is now. Comment: There is no "rest of developer team" lol
                p #[strong If you need help with anything For Zero or Vocabustudy related, these people are a great place to start. You can also join the Vocabustudy Discord Server and ask for help there.]
                    p Thank you to everyone who has helped spread the word, used the app, and made sets! We hope Vocabustudy has been a great help to you.
                p(style="margin-top: 2rem; font-size: 8px;") *Maybe they can be??????????????????????????????
            .page#donate
                h1 Donate
                p.mdc-typography--headline5 Your donations help!
                p Donations will help us pay for the domain. It is about $12 per year.
                p If we get enough donations, we will use it to pay for a better plan, which means that we can afford more features and make the website better for all of us.
                p Donations can be deposited at Omkar's locker, locker number ### on the 4th floor next to the A stairwell. (next to Ms. Krull's room) It's pretty hard to miss because it has a Vocabustudy advertisement on it.
                h2.mdc-typography--headline4 Thank you for your donations! Even a few cents or a dollar can help us improve this website.
            .page.realhome#home
                div.custom-scrollbar
                    div
                        div
                            div
                                h2.mdc-typography--headline4 Learn Vocabulary, #[br]For Free
                                ul
                                    li 100% Free
                                    li No Ads
                                    li Relevant Vocab
                            p(style="margin-bottom: 0; font-size: 1rem") Created by Siddhant Kameswar, also developed by Omkar, Ruhan, and Michael
                            p.mdc-typography--overline(style="margin-bottom: 0;") VOCABUSTUDY - U STUDY VOCAB
                                br
                                button.mdc-icon-button.btn-show-features
                                    .mdc-icon-button__ripple
                                    span.mdc-icon-button__focus-ring
                                    i.material-icons-round keyboard_double_arrow_down
                    div.home-features
                        div
                            h2 Features:
                            ul.mdc-list 
                                li.mdc-list-item.mdc-list-item--with-two-lines.mdc-list-item--non-interactive.mdc-list-item--with-leading-icon
                                    span.mdc-list-item__start
                                        i.material-icons-round tune
                                    span.mdc-list-item__content 
                                        span.mdc-list-item__primary-text Multiple Study Modes
                                        span.mdc-list-item__secondary-text Don't like flashcards? You can take a mock test, match terms, and more!
                                li.mdc-list-item.mdc-list-item--with-two-lines.mdc-list-item--non-interactive.mdc-list-item--with-leading-icon
                                    span.mdc-list-item__start
                                        i.material-icons-round category
                                    span.mdc-list-item__content
                                        span.mdc-list-item__primary-text Collections
                                        span.mdc-list-item__secondary-text Transform your learning with designed collections of vocab sets.
                                li.mdc-list-item.mdc-list-item--with-two-lines.mdc-list-item--non-interactive.mdc-list-item--with-leading-icon
                                    span.mdc-list-item__start
                                        i.material-icons-round rule
                                    span.mdc-list-item__content 
                                        span.mdc-list-item__primary-text Effective Test Prep
                                        span.mdc-list-item__secondary-text Ace your test with customized sets for your classes.
                                li.mdc-list-item.mdc-list-item--with-two-lines.mdc-list-item--with-leading-icon(onclick="window.open('https://github.com/For-0')")
                                    span.mdc-list-item__start
                                        i.material-icons-round money_off
                                    span.mdc-list-item__content
                                        span.mdc-list-item__primary-text(style="font-weight: bold; text-decoration: underline;") A For Zero Application
                                        span.mdc-list-item__secondary-text Fast, simple, effective, and completely free.
                                li.mdc-list-item.mdc-list-item--with-two-lines.mdc-list-item--non-interactive.mdc-list-item--with-leading-icon
                                    span.mdc-list-item__start
                                        i.material-icons-round school
                                    span.mdc-list-item__content
                                        span.mdc-list-item__primary-text Assignments (Coming Soon)
                                        span.mdc-list-item__secondary-text Transform learning at home and in the classroom.
                            div(style="text-align: center;")
                                a.mdc-button.mdc-button--raised.mdc-button--leading(href="/#search" style="margin-right: 1rem;")
                                    span.mdc-button__ripple
                                    i.material-icons-round.mdc-button__icon(aria-hidden="true") search
                                    span.mdc-button__label Browse Sets
                                a.mdc-button.mdc-button--outlined.mdc-button--leading.btn-cancel(href="/#login")
                                    span.mdc-button__ripple
                                    i.material-icons-round.mdc-button__icon(aria-hidden="true") account_circle
                                    span.mdc-button__label Sign Up
        include includes/footer
        aside.mdc-snackbar#snackbar-email-verification
            .mdc-snackbar__surface(role="status" aria-relevant="additions")
                .mdc-snackbar__label(aria-atomic="false") Verification email sent. Reload once you have verified your email
        aside.mdc-snackbar#snackbar-max-collections
            .mdc-snackbar__surface(role="status" aria-relevant="additions")
                .mdc-snackbar__label(aria-atomic="false") Warning: You can only choose up to 10 collections
        .mdc-dialog#modal-email-confirmation
            .mdc-dialog__container
                .mdc-dialog__surface(role="alertdialog" aria-modal="true")
                    h2.mdc-dialog__title Verify Email Address
                    .mdc-dialog__content
                        p You will not be able to use your account if you do not verify your email address.
                        p Press the button below to verify your email address
                        p Note: If it does not work, contact Omkar Patil (Vocabustudy Co-Admin) or Nikhil Gupta (Server Owner + Co-Admin) on Discord in order to get your email verified manually
                    .mdc-dialog__actions
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="close")
                            .mdc-button__ripple
                            span.mdc-button__label Not Now
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="accept")
                            .mdc-button__ripple
                            span.mdc-button__label Send Verification Email 
            .mdc-dialog__scrim
        .mdc-dialog#modal-reauthenticate-password
            .mdc-dialog__container
                .mdc-dialog__surface(role="alertdialog" aria-modal="true")
                    h2.mdc-dialog__title Re-Authenticate
                    .mdc-dialog__content
                        p To verify your identity, please sign in again:
                        label.mdc-text-field.mdc-text-field--filled
                            span.mdc-text-field__ripple
                            span.mdc-floating-label Password
                            input.mdc-text-field__input(type="password" required)
                            span.mdc-line-ripple
                    .mdc-dialog__actions
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="close")
                            .mdc-button__ripple
                            span.mdc-button__label Cancel
                        button.mdc-button.mdc-dialog__button(type="button")
                            .mdc-button__ripple
                            span.mdc-button__label OK
            .mdc-dialog__scrim
        .mdc-dialog#modal-change-password
            .mdc-dialog__container
                .mdc-dialog__surface(role="alertdialog" aria-modal="true")
                    h2.mdc-dialog__title Change Password
                    .mdc-dialog__content
                        label.mdc-text-field.mdc-text-field--filled(style="display: block; margin-bottom: 1rem;")
                            span.mdc-text-field__ripple
                            span.mdc-floating-label Password
                            input.mdc-text-field__input(type="password" required minlength="6")
                            span.mdc-line-ripple
                        label.mdc-text-field.mdc-text-field--filled
                            span.mdc-text-field__ripple
                            span.mdc-floating-label Confirm Password
                            input.mdc-text-field__input(type="password" required minlength="6")
                            span.mdc-line-ripple
                    .mdc-dialog__actions
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="close")
                            .mdc-button__ripple
                            span.mdc-button__label Cancel
                        button.mdc-button.mdc-dialog__button(type="button")
                            .mdc-button__ripple
                            span.mdc-button__label OK
        .mdc-dialog#modal-change-name
            .mdc-dialog__container
                .mdc-dialog__surface(role="alertdialog" aria-modal="true")
                    h2.mdc-dialog__title Set Name
                    .mdc-dialog__content
                        label.mdc-text-field.mdc-text-field--filled
                            span.mdc-text-field__ripple
                            span.mdc-floating-label Name
                            input.mdc-text-field__input(type="text" required)
                            span.mdc-line-ripple
                    .mdc-dialog__actions
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="close")
                            .mdc-button__ripple
                            span.mdc-button__label Cancel
                        button.mdc-button.mdc-dialog__button(type="button")
                            .mdc-button__ripple
                            span.mdc-button__label OK
            .mdc-dialog__scrim
        .mdc-dialog#modal-delete-account
            .mdc-dialog__container
                .mdc-dialog__surface(role="alertdialog" aria-modal="true")
                    .mdc-dialog__content Are you sure you would like to delete your account? Your sets will not be deleted.
                    .mdc-dialog__actions
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="close")
                            .mdc-button__ripple
                            span.mdc-button__label Cancel
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="accept")
                            .mdc-button__ripple
                            span.mdc-button__label OK
            .mdc-dialog__scrim
        .mdc-dialog#modal-delete-set
            .mdc-dialog__container
                .mdc-dialog__surface(role="alertdialog" aria-modal="true")
                    .mdc-dialog__content Are you sure you would like to delete this item? This action cannot be undone.
                    .mdc-dialog__actions
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="close")
                            .mdc-button__ripple
                            span.mdc-button__label Cancel
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="accept")
                            .mdc-button__ripple
                            span.mdc-button__label OK
            .mdc-dialog__scrim
        .mdc-dialog#modal-filter-collection
            .mdc-dialog__container
                .mdc-dialog__surface(role="alertdialog" aria-modal="true")
                    h2.mdc-dialog__title Filter by Collection:
                    .mdc-dialog__content(style="overflow-y: scroll;")
                        p(style="margin: 0") You can choose a maximum of 10 collections to filter by
                        ul.mdc-list(data-evolution="true")
                    .mdc-dialog__actions
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="accept")
                            .mdc-button__ripple
                            span.mdc-button__label OK
        .mdc-dialog#modal-change-hue
            .mdc-dialog__container
                .mdc-dialog__surface(role="alertdialog" aria-modal="true")
                    h2.mdc-dialog__title Change Theme
                    .mdc-dialog__content
                        p Set Hue:
                        .mdc-slider
                            input.mdc-slider__input(type="range" min="0" max="360" value="0" aria-label="Select Value" name="volume")
                            .mdc-slider__track
                                .mdc-slider__track--inactive
                                .mdc-slider__track--active
                                    .mdc-slider__track--active_fill
                            .mdc-slider__thumb
                                .mdc-slider__thumb-knob
                    .mdc-dialog__actions
                        button.mdc-button.mdc-dialog__button(type="button" data-mdc-dialog-action="close")
                            .mdc-button__ripple
                            span.mdc-button__label OK
        script(src="js/index.js" type="module")
