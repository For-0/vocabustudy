extends includes/layout.pug
block variables
    - var title = "Home";
block main-stylesheet
    link(rel="stylesheet" href="css/home.scss")
block extrahead
    link(rel="preload" href="./images/hero-background.svg" as="image")
    unless process.env.NODE_ENV === "development"
        script(src="https://accounts.google.com/gsi/client" async defer)
block content
    #mysets.page(data-nosnippet)
        h1 My Sets:
            .dropdown.is-pulled-right
                .dropdown-trigger
                    button.button.btn-create.is-secondary-light(aria-haspopup="true" aria-controls="dropdown-menu")
                        +material-symbol("add_circle", false, true, 20)
                        span Create
                        +material-symbol("arrow_drop_down", false, true, 20).is-small
                .dropdown-menu.menu-create(role="menu")
                    .dropdown-content
                        a.dropdown-item(href="/set/new/edit/")
                            span.icon-text
                                +material-symbol("add_circle", false, true, 20)
                                span Set
                        a.dropdown-item(href="/set/new-timeline/edit/")
                            span.icon-text
                                +material-symbol("add_circle", false, true, 20)
                                span Timeline
                        a.dropdown-item(href="/set/new-guide/edit/")
                            span.icon-text
                                +material-symbol("add_circle", false, true, 20)
                                span Guide
        .set-container(data-empty="You don't have any sets. Create one!")
        button.button.is-primary.is-outlined.mt-2(style="display: block;" hidden) Load More
        .box.level.mt-3
            .level-left
                .level-item
                    h2.title.is-5 My Custom Collections:
            .level-right
                .level-item
                    button.button.is-primary.is-outlined.btn-create-collection
                        +material-symbol("add_circle", false, true, 20)
                        span Create Custom Collection
        .collection-container.set-container(data-empty="You don't have any custom collections. Create one!")
    #saved-sets.page(data-nosnippet)
        h1 Saved Sets
        h2 Liked Sets:
        .liked-container.set-container(data-empty="No Sets")
        button.button.is-primary.is-outlined.mt-2(style="display: block;" hidden) Load More
    #search.page(data-nosnippet)
        h1 Browse Sets:
        details.box.block.mt-5
            summary
                h2.title.is-size-4(style="display: inline;") Featured Sets
            .set-container.mt-4(style="cursor: auto;" data-empty="No featured sets") Loading featured sets...
        h2.title.is-size-4.mb-0 Search:
        .field-search-container.box.p-3
            .level.mb-2
                .level-left.is-flex-grow-1
                    .level-item(style="width: calc(100% - 1rem);")
                        input.input.field-search(placeholder="Search" type="text" autocomplete="off")
                .level-right
                    .level-item.buttons
                        button.button.is-outlined.is-info.btn-collections-menu(type="button")
                            +material-symbol("filter_list", false, true, 20)
                            span Collections
                        button.button.is-outlined.is-danger.btn-clear-filters(type="button")
                            +material-symbol("filter_list_off", false, true, 20)
                            span Clear
                        button.button.is-primary.btn-search-go(type="button")
                            +material-symbol("search", false, true, 20)
                            span Search
            p.m-1 Maximum 10 Words/Collections:
                span.ml-1.is-inline-block.field-search-collections-list(style="vertical-align: bottom;")
        .set-container.mt-4(data-empty="No Sets Matched Your Search. Did you spell each word correctly?") Try searching for something like '50 States' or try a featured set above.
        button.button.is-primary.is-outlined.mt-2(style="display: block;" hidden) Load More
