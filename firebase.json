{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "public": "dist",
      "target": "vocabustudy",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "trailingSlash": true,
      "cleanUrls": true
    },
    {
      "public": "rd",
      "target": "rd"
    }
  ],
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9099
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8080
    },
    "hosting": {
      "host": "127.0.0.1",
      "port": 5000
    },
    "logging": {
      "host": "127.0.0.1",
      "port": 4500
    },
    "hub": {
      "host": "127.0.0.1",
      "port": 4400
    },
    "ui": {
      "host": "127.0.0.1",
      "port": 4000,
      "enabled": true
    }
  }
}
